@using Core.Domain.Enums;
@model PackageModel

@{
    Layout = "_CenteredLayout";
    ViewData["Title"] = "Pakket aanmaken";
}

<div class="col-12 --form-holder">
    <div class="--form-title">
        <h2>Pakket aanmaken</h2>
    </div>

    <div class="--form-content-holder">
        <form asp-action="CreatePackage" asp-controller="Package" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control --input" />
            </div>

            <div class="form-group">
                <label asp-for="Products"></label>
                <div><span asp-validation-for="Products" class="text-danger"></span></div>
                <div style="overflow-y: scroll; height:200px; margin-bottom:15px;">
                    @foreach (var item in Model.AvailableProducts!)
                    {

                        <div class="checkbox">
                            <input class="check" type="checkbox"
                               name="SelectedProducts"
                               value="@item.Value"
                                   @if(Model.SelectedProducts!.Contains(item.Value))
                                   {
                                        <text> checked </text>
                                    } 
                               />

                            <label class="label">
                                <svg width="50" height="50" viewbox="0 0 100 100">
                                    <rect x="30" y="20" width="50" height="50" stroke="black" fill="none" />
                                    <g transform="translate(0,-952.36222)">
                                        <path d="m 56,963 c -102,122 6,9 7,9 17,-5 -66,69 -38,52 122,-77 -7,14 18,4 29,-11 45,-43 23,-4 " stroke="#1C3879" stroke-width="5" fill="none" class="path1" />
                                    </g>
                                </svg>
                                <span>@item.Text</span>
                            </label>
                        </div>
                    }
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="PickUpTime"></label>
                <div><span asp-validation-for="PickUpTime" class="text-danger"></span></div>
                <input asp-for="PickUpTime" class="form-control --input" />
            </div>
            <div class="form-group">
                <label asp-for="LatestPickUpTime"></label>
                <div><span asp-validation-for="LatestPickUpTime" class="text-danger"></span></div>
                <input asp-for="LatestPickUpTime" class="form-control --input" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <div><span asp-validation-for="Price" class="text-danger"></span></div>
                <input asp-for="Price" class="form-control --input" />
            </div>
            <div class="form-group">
                <label asp-for="MealType"></label>
                <div><span asp-validation-for="MealType" class="text-danger"></span></div>
                <select asp-for="MealType" class="form-control --input" asp-items="Html.GetEnumSelectList<MealtypeEnum>()">
                    <option>Selecteer</option>
                </select>
            </div>
            <button class="--main-btn" style="margin-top:15px;" type="submit">Pakket aanmaken</button>
        </form>
    </div>
</div>