@using Core.Domain.Enums;
@model PackageModel

@{
    ViewData["Title"] = "Pakket bewerken";
}

<form asp-action="EditPackage" asp-controller="Package" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" value="@Model.Name"/>
    </div>

    <div class="form-group">
        <label asp-for="Products"></label>
        <div><span asp-validation-for="Products" class="text-danger"></span></div>

        @foreach (var item in Model.AvailableProducts!)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox"
                       name="SelectedProducts"
                       value="@item.Value"
                       @if(Model.SelectedProducts!.Contains(item.Value))
                       {
                            <text> checked </text>
                       } 
                /> @item.Text
                </label>
            </div>
        }
    </div>
    <div class="form-group">
        <label asp-for="PickUpTime"></label>
        <div><span asp-validation-for="PickUpTime" class="text-danger"></span></div>
        <input asp-for="PickUpTime" class="form-control" value="@Model.PickUpTime.ToString("YYYY-MM-DDTHH:MM")" />
    </div>
    <div class="form-group">
        <label asp-for="LatestPickUpTime"></label>
        <div><span asp-validation-for="LatestPickUpTime" class="text-danger"></span></div>
        <input asp-for="LatestPickUpTime" class="form-control" value="@Model.LatestPickUpTime" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" value="@Model.Price" />
    </div>
    <div class="form-group">
        <label asp-for="MealType"></label>
        <div><span asp-validation-for="MealType" class="text-danger"></span></div>
        <select asp-for="MealType" class="form-control" asp-items="Html.GetEnumSelectList<MealtypeEnum>()">
            <option>Selecteer</option>
        </select>
    </div>
    <button class="btn btn-primary" style="margin-top:15px;" type="submit">Pakket bewerken</button>
    </div>
</form>