@model IEnumerable<Package>
@{
    ViewData["Title"] = "Home";
    var role = this.User.GetRole();

}

@if (role == "Student" || role == "CanteenEmployee")
{

    <div class="col-md-12">
        <h1>Goedemiddag, Naam</h1>
    </div>

    <hr />
    
    @if (role == "Student")
    {
        <h2>Al jouw actieve reserveringen:</h2>

    }
    else
    {
        <h2>Alle actieve reserveringen:</h2>
    }
    

    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (Package p in Model)
            {
                <div class="card --custom-card col-sm-12 col-md-6">
                    <a class="--home-card-aTag" asp-action="PackageDetails" asp-controller="Package" asp-route-id="@p.PackageId">
                        <div class="card-horizontal">
                            <div class="img-square-wrapper">
                                <img class="--home-card-img" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(p.Products!.First().Picture!))" alt="@p.Products.First().Name" alt="Card image cap">
                            </div>
                            <div class="card-body --custom-card-body">
                                <h4 class="card-title">@p.Name</h4>
                                <p class="card-text">Ophaaldatum en tijd: @p.GetPickupDateAndTime()</p>
                                <p class="card-text">Prijs: @p.GetPrice()</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        @if (role == "Student") {
            <p>Je hebt momenteel nog niks gereserveerd.</p>
        }
        else
        {
            <p>Er zijn momenteel geen reserveringen.</p>
        }
    }
}
else
{
    <section class="text-center">
        <h1 class="--header-main --home-hero-section">Welkom op Avans Too Good To Go</h1>
        <h2 class="--header-sub-main">Maak snel een account aan!</h2>
        <div class="--home-btn-holder">
            <a class="--main-btn" asp-action="RegisterStudent" asp-controller="Account">Student</a>
            <a class="--main-btn" asp-action="RegisterCanteenEmployee" asp-controller="Account">Kantinemedewerker</a>
        </div>
        <p>Heb je al een account? Klik <a class="--text-link" asp-action="Login" asp-controller="Account">hier</a> om in te loggen</p>
    </section>
}
